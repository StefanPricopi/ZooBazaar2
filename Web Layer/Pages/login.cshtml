@page
@model Web_Layer.Pages.loginModel
@{
}
<div class="container border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="User.Username" class="form-control" />
                <span class="text-danger" asp-validation-for="User.Username"></span>
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="User.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="User.Password"></span>
            </div>
        </div>
        <div class="form-group row gap-5">
            <div class="col-1">
                <input type="submit" class="btn-primary" value="Login" />
            </div>
            <div class="col-1">
                <a class="btn btn-primary btn-sm" href="/signup" role="button">Register</a>
            </div>
            <div class="col-1">
                <a class="btn btn-primary btn-sm" href="/ResetPassword" role="button">Forgot your password?</a>
            </div>
        </div>
    </form>
</div>
