@page
@model individual_project.Pages.NewPasswordModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="User.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="User.Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <input type="submit" class="btn-primary" value="Press to change password" />
            </div>
        </div>

    </form>
</div>