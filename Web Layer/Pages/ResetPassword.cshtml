@page
@model individual_project.Pages.ResetPasswordModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="User.Username" class="form-control" />

            </div>
            <span class="text-danger" asp-validation-for="User.Username"></span>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <input type="submit" class="btn-primary" value="Reset Password" />
            </div>
        </div>

    </form>
</div>