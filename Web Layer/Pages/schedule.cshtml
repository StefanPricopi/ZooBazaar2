@page
@model Web_Layer.Pages.scheduleModel
@{
    var schedulesByDate = Model.schedules.GroupBy(s => s.Date.Date).OrderBy(g => g.Key);
}

<body>
    <h1>Schedules</h1>

    @foreach (var scheduleGroup in schedulesByDate)
    {
        <h2>@scheduleGroup.Key.ToShortDateString()</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>EmployeeID</th>
                    <th>ShiftID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in scheduleGroup)
                {
                    <tr>
                        <td>@schedule.Date</td>
                        <td>@schedule.EmployeeId</td>
                        <td>@schedule.Shift</td>
                    </tr>
                }   
            </tbody>
        </table>
    }
    <div class="container mt-2" style=" justify-content: center; align-items: center;">
        <div class="row" style="justify-content: center; align-items: center;">
            @Html.Raw(Model.GenerateShifts(Model.currentDay))
        </div>
    </div>
</body>
